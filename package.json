{
  "name": "vite-plugin-command",
  "version": "2.0.0",
  "scripts": {
    "build": "rollup -c && tsc --declaration --emitDeclarationOnly",
    "lint": "eslint src/** --fix"
  },
  "description": "Vite plugin to run custom commands on file changes",
  "keywords": [
    "vite",
    "vite-plugin"
  ],
  "author": "emargareten",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emargareten/vite-plugin-command.git"
  },
  "homepage": "https://github.com/emargareten/vite-plugin-command#readme",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/vite-plugin-command.umd.cjs",
  "module": "./dist/vite-plugin-command.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vite-plugin-command.js",
      "require": "./dist/vite-plugin-command.umd.cjs"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "minimatch": "^10.2.2"
  }
}
